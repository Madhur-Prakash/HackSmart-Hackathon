{
  "name": "ev-charging-platform-backend",
  "version": "1.0.0",
  "description": "Production-grade real-time EV charging & battery-swap station recommendation platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "concurrently --kill-others-on-fail -n api,ingestion,features,scoring,optimization,recommendation,llm,mock-ai -c blue,green,yellow,magenta,cyan,red,white,gray \"npm run dev:api\" \"npm run dev:ingestion\" \"npm run dev:features\" \"npm run dev:scoring\" \"npm run dev:optimization\" \"npm run dev:recommendation\" \"npm run dev:llm\" \"npm run dev:mock-ai\"",
    "dev:api": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:ingestion": "ts-node-dev --respawn --transpile-only src/services/ingestion/index.ts",
    "dev:features": "ts-node-dev --respawn --transpile-only src/services/features/index.ts",
    "dev:scoring": "ts-node-dev --respawn --transpile-only src/services/scoring/index.ts",
    "dev:optimization": "ts-node-dev --respawn --transpile-only src/services/optimization/index.ts",
    "dev:recommendation": "ts-node-dev --respawn --transpile-only src/services/recommendation/index.ts",
    "dev:llm": "ts-node-dev --respawn --transpile-only src/services/llm/index.ts",
    "dev:mock-ai": "node docker/mock-ai-server.js",
    "infra:up": "docker compose -f docker-compose.infra.yml up -d",
    "infra:down": "docker compose -f docker-compose.infra.yml down",
    "infra:logs": "docker compose -f docker-compose.infra.yml logs -f",
    "migrate": "ts-node src/db/migrations.ts",
    "seed": "ts-node src/db/seed.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "kafka:topics": "ts-node src/kafka/createTopics.ts",
    "db:setup": "npm run migrate && npm run seed"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "cockatiel": "^3.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "knex": "^3.1.0",
    "nodemon": "^3.1.11",
    "openai": "^4.28.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ev-charging",
    "real-time",
    "kafka",
    "microservices",
    "typescript"
  ],
  "author": "EV Platform Team",
  "license": "MIT"
}
