# Environment Configuration
NODE_ENV=development

# Server Configuration
API_PORT=3000
INGESTION_PORT=3001
RECOMMENDATION_PORT=3005

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ev-platform
KAFKA_GROUP_ID=ev-platform-group

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=evplatform
POSTGRES_PASSWORD=evplatform123
POSTGRES_DB=evplatform

# Groq Configuration
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile

# External AI Services
AI_LOAD_FORECAST_URL=http://localhost:8080/ai/load-forecast
AI_FAULT_PROBABILITY_URL=http://localhost:8080/ai/fault-probability

# Cache TTL (seconds)
SCORE_CACHE_TTL=30
PREDICTION_CACHE_TTL=60
SESSION_CACHE_TTL=3600

# Scoring Weights
WEIGHT_WAIT_TIME=0.25
WEIGHT_AVAILABILITY=0.20
WEIGHT_RELIABILITY=0.20
WEIGHT_DISTANCE=0.20
WEIGHT_ENERGY_STABILITY=0.15

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Model Paths
MODEL_DIR=./models
XGB_QUEUE_MODEL_PATH=${MODEL_DIR}/xgb_queue_tuned_model.pkl
