BATTERY_REBALANCE_MODEL_PATH=${MODEL_DIR}/battery_rebalance_model.pkl
STOCK_ORDER_MODEL_PATH=${MODEL_DIR}/stock_order_model.pkl
STAFF_DIVERSION_MODEL_PATH=${MODEL_DIR}/staff_diversion_model.pkl
TIEUP_STORAGE_MODEL_PATH=${MODEL_DIR}/tieup_storage_model.pkl
