FROM python:3.10-slim

WORKDIR /app

# Install system dependencies for LightGBM (libgomp) and other ML libraries
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

COPY docker/run_model_api.py ./
COPY docker/requirements.txt ./

RUN pip install --no-cache-dir -r requirements.txt

EXPOSE 8001

CMD ["uvicorn", "run_model_api:app", "--host", "0.0.0.0", "--port", "8001"]
